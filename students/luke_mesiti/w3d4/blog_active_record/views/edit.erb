<% unless @blog_post.valid? %>
<% @blog_post.errors.each do |x,y| %>
        <p class="error_colour"><%=x.to_s + " " + y.to_s %></p>
    <% end %>
<% end %>

<form method='post' action="/posts/<%= @blog_post["id"] %>">
    <input type="hidden" name="_method" value="put" />
    <label>TITLE - </label>
    <input type="text" name="post[title]" value="<%= @blog_post["title"] %>">

    <label>DESCRIPTION - </label>
    <textarea name="post[description]"><%= @blog_post["description"] %></textarea>

    <label>BODY - </label>
    <textarea name="post[body]"><%= @blog_post["body"] %></textarea>

    <label>AUTHOR - </label>
    <input type="text" name="post[author]" value="<%= @blog_post["author"] %>">

    <button>UPDATE POST</button>
</form>
