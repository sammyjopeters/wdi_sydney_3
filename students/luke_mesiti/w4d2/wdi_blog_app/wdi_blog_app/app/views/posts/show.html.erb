<ul>
    <li><%= @post.title %></li>
    <li><%= @post.description %></li>
    <li><%= @post.body %></li>
    <li><%= @post.author %></li>
    <li><%= @post.created_at %></li>
    <li><%= @post.updated_at %></li>
</ul>

<p><%= link_to 'Edit', edit_post_path(@post) %></p>

<p><%= link_to 'Delete', @post, :method => :delete, :confirm => 'Are you sure you want to delete this post?' %></p>

<p><%= link_to 'Home', posts_path %></p>