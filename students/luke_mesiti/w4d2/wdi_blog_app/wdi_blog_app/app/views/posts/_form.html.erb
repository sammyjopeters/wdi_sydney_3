<%= form_for @post do |f| %>
    
    <%= f.label :title %>
    <%= f.text_field :title %><br/>

    <%= f.label :description %>
    <%= f.text_field :description %><br/>

    <%= f.label :body %>
    <%= f.text_field :body %><br/>

    <%= f.label :author %>
    <%= f.text_field :author %><br/>

    <%= f.submit %>

<% end %>
